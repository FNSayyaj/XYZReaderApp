<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_cardview_margin_left"
    android:layout_marginRight="@dimen/list_cardview_margin_right"
    android:layout_marginTop="@dimen/list_cardview_margin_top"
    android:layout_marginBottom="@dimen/list_cardview_margin_bottom"
    android:elevation="@dimen/card_elevation"
    app:pressedTranslationZ="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:layout_marginStart="@dimen/list_cardview_margin_left"
    android:layout_marginEnd="@dimen/list_cardview_margin_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_textview_article_title_padding_left"
            android:paddingTop="@dimen/list_textview_article_title_padding_top"
            android:paddingRight="@dimen/list_textview_article_title_padding_right"
            android:paddingBottom="@dimen/list_textview_article_title_padding_bottom"
            android:textColor="@color/textColorPrimary"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingStart="@dimen/list_textview_article_title_padding_left"
            android:paddingEnd="@dimen/list_textview_article_title_padding_right" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_textview_article_subtitle_padding_left"
            android:paddingRight="@dimen/list_textview_article_subtitle_padding_right"
            android:paddingBottom="@dimen/list_textview_article_subtitle_padding_bottom"
            android:textColor="@color/textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingStart="@dimen/list_textview_article_subtitle_padding_left"
            android:paddingEnd="@dimen/list_textview_article_subtitle_padding_right" />
    </LinearLayout>

</android.support.v7.widget.CardView>
